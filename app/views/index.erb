<div>
  <h1>Stacktacular!</h1>

  <% if current_user %>
  <!-- make a users controller and view to handle this request -->
    <a href="/users/<%= current_user.id%>"><%= current_user.name %></a>
  <% end %>

  <div class="container" id="post_container">
    <h2>Recent Posts</h2>
    <% @questions.each do |question| %>
      <div class="questions">
        <div class="votes">
        <!-- may need to change this and the title to question.votes -->
          <%= question[:votes] %>
        </div>
        <%= question[:title] %>
      </div>
      <br>
    <% end %>
  </div>

  <% if !current_user %>
    <div class="container">
      <h2>Login!</h2>
      <form action="/sessions" method="post">
        <input type="text" name="email" placeholder="email">
        <input type="password" name="password" placeholder="password">
        <input type="submit" name="submit">
      </form>
      <br>

      <p>Not registered yet? Click <a id="register" href="/users/new">here</a> to register.</p>
    </div>

    <div class="container" id="regform"></div>


  <% end %>

</div>

